VITE_MAPTILER_KEY=your_maptiler_key_here

# Local-only mode (true = use local register/login page, false = Cognito auth)
VITE_LOCAL_ONLY=true

# Local API endpoints (served by vite.config.js)
VITE_VISIBLE_PLANETS_URL=/api/visible-planets
VITE_LIGHTMAP_API_BASE=/api
VITE_FAVORITES_API_BASE=/api
VITE_RECOMMENDATIONS_API_BASE=/api
VITE_DARK_SPOTS_URL=/api/darkspots

# Optional Cognito Hosted UI (leave blank for local-only mode)
VITE_COGNITO_DOMAIN=
VITE_COGNITO_CLIENT_ID=
VITE_COGNITO_REDIRECT_URI=http://localhost:5173
VITE_COGNITO_LOGOUT_URI=http://localhost:5173
VITE_COGNITO_SCOPES=openid email
